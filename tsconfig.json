{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2020"
    ],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "main.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
